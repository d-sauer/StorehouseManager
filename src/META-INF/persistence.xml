<?xml version="1.0" encoding="UTF-8"?>
<persistence version="1.0" xmlns="http://java.sun.com/xml/ns/persistence" xmlns:xsi="http://www.w3.org/2001/XMLSchema-instance" xsi:schemaLocation="http://java.sun.com/xml/ns/persistence http://java.sun.com/xml/ns/persistence/persistence_1_0.xsd">
  <persistence-unit name="purgarPU" transaction-type="RESOURCE_LOCAL">
    <provider>oracle.toplink.essentials.PersistenceProvider</provider>
    <class>persistence.Vrpartnera</class>
    <class>persistence.Racun</class>
    <class>persistence.Otpremnica</class>
    <class>persistence.Partner</class>
    <class>persistence.Stavkaotpremnice</class>
    <class>persistence.Zaposlenici</class>
    <class>persistence.Privilegije</class>
    <class>persistence.Ponuda</class>
    <class>persistence.Stavkaponuda</class>
    <properties>
      <property name="toplink.jdbc.user" value="root"/>
      <property name="toplink.jdbc.password" value=""/>
      <property name="toplink.jdbc.url" value="jdbc:mysql://localhost:3306/purgarDB"/>
      <property name="toplink.jdbc.driver" value="com.mysql.jdbc.Driver"/>
    </properties>
  </persistence-unit>
</persistence>